<%

   body_classes = []


   body_classes.push (controller_name == 'dashboard') ? 'dashboard-main' : controller_name

   body_classes.push action_name

   body_classes.push 'with-sidebar-second' if content_for? :sidebar_second


   title_components = []
   unless @page_title.blank?
     title_components << @page_title
   end
   unless @agency.blank?
     title_components << @agency.name
   end
   title_components << 'Boomr'

   @title_tag = title_components.join ' | '

%>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">

  <title><%= @title_tag %></title>

  <%= favicon_link_tag %>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <% if controller_name != 'visits' or action_name != 'this_month' %>
      <%= stylesheet_link_tag    "ui", :media => "all" %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "dashboard" %>
  <%= javascript_include_tag "modernizr-2.6.2.min" %>

  <%= csrf_meta_tags %>
</head>
<body class="dashboard <%= body_classes.join " " %>">

<div id="page">
  <div id="page-inner">
    <div id="header" class="">
      <div id="header-inner">
        <%= render 'layouts/header' %>
      </div>
    </div>

    <div id="main" class="">
      <div id="main-inner">

        <div id="navigation">
          <%= render 'layouts/dashboard_top_menu' %>
        </div>



        <div id="content" class="main-col">
          <div id="content-wrapper">
            <div id="content-inner" class="inner main-col-inner">

              <%= render 'shared/breadcrumb' %>

              <% if content_for?(:title) or not @page_title.blank? or content_for?(:page_top) %>
                  <div class="title-wrapper">
                    <div class="title-wrapper-inner">
                      <% if content_for?(:title) %>
                          <h1 class="title"><%= yield :title %></h1>
                      <% elsif not @page_title.blank? %>
                          <h1 class="title"><%= @page_title %></h1>
                      <% end %>

                      <% if content_for? :page_top %>
                          <div id="page-top">
                            <div id="page-top-inner">
                              <%= yield :page_top %>
                            </div>
                          </div>
                      <% end %>

                    </div>
                  </div>
              <% end %>

              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>

              <% if content_for? :page_caption %>
                  <%= render 'dashboard/shared/page_caption', :caption => yield(:page_caption) %>
              <% end %>

              <%= yield %>

            </div>
          </div>
        </div>

        <div id="sidebar-first" class="sidebar main-col">
          <div id="sidebar-first-inner" class="sidebar-inner main-col-inner inner">
            <%= render 'layouts/dashboard_sidebar_menu' %>
          </div>
        </div>

        <% if content_for? :sidebar_second %>
            <div id="sidebar-second" class="sidebar main-col">
              <div id="sidebar-second-inner" class="sidebar-inner main-col-inner inner">
                <%= yield :sidebar_second %>
              </div>
            </div>
        <% end %>


        <div style="clear:both"></div>

      </div>
    </div>

    <div id="footer" class="">
      <div id="footer-inner">


      </div>
    </div>


  </div>
</div>


<%= render 'layouts/copyright' %>
<%=  render 'layouts/tracking' %>


</body>
</html>
