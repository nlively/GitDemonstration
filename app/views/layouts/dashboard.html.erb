<%

   body_classes = []


   body_classes.push (controller_name == 'dashboard') ? 'dashboard-main' : controller_name

   body_classes.push action_name

   body_classes.push 'with-sidebar-second' if content_for? :sidebar_second

%>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">

  <title>Boomr Web Portal</title>
  <%= javascript_include_tag "http://boomr-node.herokuapp.com/socket.io/socket.io.js" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "dashboard" %>
  <%= javascript_include_tag "modernizr-2.6.2.min" %>

  <%= csrf_meta_tags %>
</head>
<body class="dashboard <%= body_classes.join " " %>">

<div id="page">
  <div id="page-inner">
    <div id="header" class="">
      <div id="header-inner">
        <%= render 'layouts/header' %>
      </div>
    </div>

    <div id="main" class="">
      <div id="main-inner">

        <div id="navigation">
          <%= render 'layouts/dashboard_top_menu' %>
        </div>


        <div id="sidebar-first" class="sidebar main-col">
          <div id="sidebar-first-inner" class="sidebar-inner main-col-inner inner">
            <%= render 'layouts/dashboard_sidebar_menu' %>
          </div>
        </div>

        <div id="content" class="main-col">
          <div id="content-inner" class="inner main-col-inner">

            <%= render 'shared/breadcrumb' %>

            <% if content_for? :title %>
                <div class="title-wrapper">
                  <h1 class="title"><%= yield :title %></h1>

                  <% if content_for? :page_top %>
                      <div id="page-top">
                        <div id="page-top-inner">
                           <%= yield :page_top %>
                        </div>
                      </div>
                  <% end %>

                </div>
            <% end %>

            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>

            <% if content_for? :page_caption %>
                <%= render 'dashboard/shared/page_caption', :caption => yield(:page_caption) %>
            <% end %>

            <%= yield %>

          </div>
        </div>

        <% if content_for? :sidebar_second %>
            <div id="sidebar-second" class="sidebar main-col">
              <div id="sidebar-second-inner" class="sidebar-inner main-col-inner inner">
                <%= yield :sidebar_second %>
              </div>
            </div>
        <% end %>


        <div style="clear:both"></div>

      </div>
    </div>

    <div id="footer" class="">
      <div id="footer-inner">


      </div>
    </div>


  </div>
</div>


<%= render 'layouts/copyright' %>
<%=  render 'layouts/tracking' %>


</body>
</html>
