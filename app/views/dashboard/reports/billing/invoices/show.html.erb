
<h3>Billing Report</h3>


<div class="batch-summary">
  <h3>Invoice Number: <%=  @invoice.invoice_number %></h3>

  <div class="actions">
    <%= link_to 'Delete', dashboard_reports_billing_invoice_path(@invoice), :method => :delete, :confirm => 'Are you sure you want to delete this invoice?' %>
  </div>

</div>

<table>
  <thead>
  <tr>
    <td>Client Name</td>
    <td>Total Hours</td>
    <td>Rate</td>
    <td>Adjustments</td>
    <td>Total</td>
    <td>Edit/Freeze/Delete</td>
  </tr>
  </thead>
  <% @invoice.client_invoice_line_items.each do |item|
    client = item.care_recipient
  %>
    <tr>
      <td><%= client.full_name %></td>
      <td><%= item.hours %></td>
      <td><%= item.bill_rate_formatted %></td>
      <td><%= item.adjustments_formatted %></td>
      <td><%= item.total_formatted %></td>
      <td><%= 'n/a' %></td>

    </tr>
  <% end %>
</table>


<hr />

<h3>History</h3>


<%= render 'dashboard/reports/shared/invoices_table', :invoices => @invoices %>
