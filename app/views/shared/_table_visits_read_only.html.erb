<table id="visits" class="visits read-only">
  <thead>
  <tr>
    <th>Date</th>
    <th>
      <%= mode == :client ? 'Client' : 'Employee' %>
    </th>
    <th>Pay Rate</th>
    <th>Bill Rate</th>
    <th>In</th>
    <th>Out</th>
    <th>Duration</th>
    <th>Location</th>
  </tr>
  </thead>
  <tbody>
  <% visits.each do |visit| %>
      <tr class="visit-row">
        <td class="date">
          <%= visit.date_only_formatted %>
        </td>
        <td class="person <%= mode == :client ? 'client' : 'employee' %>">
          <%= mode == :client ? visit.client_label : visit.employee_label %>
        </td>
        <td class="payrate">
          <%= visit.pay_rate_formatted %>
        </td>
        <td class="billrate">
          <%= visit.bill_rate_formatted %>
        </td>
        <td class="in-time">
          <%= visit.in_time_time_only %>
        </td>
        <td class="out-time">
          <%= visit.out_time_time_only %>
        </td>
        <td class="duration">
          <%= visit.duration_string %>
        </td>
        <td class="location">
          <%= visit.location_label %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>