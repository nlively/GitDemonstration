<div class="credit-cards">
<% if credit_cards.empty? %>

    You have no cards on file.   <%= link_to 'Add a credit card', new_dashboard_settings_agency_credit_card_path %>

<% else %>

    <table id="credit-cards">
      <thead>
      <tr>
        <td>Type</td>
        <td>Number</td>
        <td>Expiration</td>
        <td>Actions</td>
      </tr>
      </thead>
      <tbody>
      <% credit_cards.each do |cc| %>
          <tr class="<%= "default" if cc.default? %>">
            <td><%= cc.card_type %></td>
            <td><%= cc.last_4 %>

              <% if cc.default? %>
                   <span class="default"><em>(default card on file)</em></span>
                  <% end %>
            </td>
            <td><%= sprintf("%s/%s", cc.expiration_month, cc.expiration_year) %></td>
            <td>
              <%= link_to "edit", edit_dashboard_settings_agency_credit_card_path(cc.token) %>
              <% unless cc.default? %>
                  |
                  <%= link_to "make default", dashboard_settings_agency_credit_cards_set_default_path(cc.token), :remote => true %>
                  |
                  <%= link_to "remove", dashboard_settings_agency_credit_card_path(cc.token), :method => :delete, :confirm => 'Are you sure you want to remove this credit card?' %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>
</div>