<% content_for :page_caption do %>
    Batch Summary
<% end %>

<% content_for :page_top do %>

    <div class="padded-content">
      From <%= @batch.period_start.to_formatted_s(:mdy) %> to <%= @batch.period_end.to_formatted_s(:mdy) %>
    </div>

<% end %>

<%= javascript_include_tag 'prevent_page_leave' %>

<%= form_for @batch, :url => dashboard_reports_payroll_export_batch_path, :method => :post, :html => {:class => 'table-form'} do |f| %>

    <%= hidden_field_tag :pending, '1' %>

    <div class="padded-content">
      <%= f.submit 'Save and Export' %>  <em>Saves and exports this batch</em>
    </div>

    <table>
      <thead>
      <tr>
        <th><%= check_box_tag 'select_all', '', true, :id => 'select-all' %></th>
        <th>Employee Name</th>
        <th>Total Hours</th>
        <th>Total</th>
        <th></th>
      </tr>
      </thead>
      <% @batch.payroll_line_items.each do |item|
        employee = item.user
      %>
          <tr>
            <td><%= check_box_tag 'export[]', item.id, true %></td>
            <td><%= employee.full_name %></td>
            <td><%= item.total_hours %></td>
            <td><%= item.total_formatted %></td>
            <td><%= link_to 'View/edit', dashboard_reports_payroll_batch_line_item_path(@batch, item) %></td>
          </tr>
      <% end %>
    </table>


<% end %>