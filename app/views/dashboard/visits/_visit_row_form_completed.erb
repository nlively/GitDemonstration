

<tr class="visit-row edit-mode" date-remote="true" data-id="<%= visit.id %>">
  <td colspan="10">
    <%= form_for visit, :url => dashboard_visit_path(visit), :remote => true  do |f| %>
        <%= hidden_field_tag :type, 'completed' %>
        <table class="edit-mode">
          <tr>
            <td class="date">
              <%= visit.date_only_formatted %>
            </td>
            <td class="employee" rel="<%= visit.user_id %>">
              <%= visit.employee_label %>
            </td>
            <td class="payrate">
              $ <%= f.text_field :pay_rate, :size => 3 %>
            </td>
            <td class="client" rel="<%= visit.care_recipient_id %>">
              <%= visit.client_label %>
            </td>
            <td class="billrate">
              $ <%= f.text_field :bill_rate, :size => 3 %>
            </td>
            <td class="in-out-time">
              <%= render 'shared/visit_icon', :visit => visit %>
              <%= visit.time_only_string %><br>(<%= visit.duration_string %>)
            </td>
            <td class="break-time">
              <%= visit.break_duration_string %>
            </td>

            <td class="location">
              <%= visit.location_label %>
            </td>
            <td class="data">
              <%= link_to 'view', dashboard_visit_path(visit) %>
            </td>
            <td>

              <div class="actions">
                <%= link_to 'Save', 'javascript:void(0);', :id => 'save-link' %>
                <br>
                <%= link_to 'Cancel', dashboard_visit_path(visit, :type => :completed), :remote => true %>
              </div>

            </td>
          </tr></table>
    <% end %>
  </td>
</tr>
