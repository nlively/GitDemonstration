<%

   body_classes = []
   body_classes.push controller_name
   body_classes.push action_name

   title_components = []
   unless @page_title.blank?
     title_components << @page_title
   end
   unless @agency.blank?
     title_components << @agency.name
   end
   title_components << 'Boomr'

   @title_tag = title_components.join ' | '

%>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">

  <title><%= @title_tag %></title>

  <%= favicon_link_tag %>

  <%= stylesheet_link_tag    "dashboard/application", :media => "all" %>
  <% if controller_name != 'visits' or action_name != 'this_month' %>
      <%= stylesheet_link_tag    "ui", :media => "all" %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "modernizr-2.6.2.min" %>

  <%= csrf_meta_tags %>
</head>
<body class="splash <%= body_classes.join ' ' %>">

<div id="splash">
  <div id="splash-inner">


    <h1>
    <%= image_tag 'login/dashboard_login_logo.png' %>
    </h1>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if content_for? :page_caption %>
        <%= render 'dashboard/shared/page_caption', :caption => yield(:page_caption) %>
    <% end %>

    <%= yield %>


  </div>
</div>

<div id="copyright">
  Copyright &copy; 2011-<%= Time.new.year %>, Boomr Healthcare Inc.  All rights reserved.
</div>


<%=  render 'layouts/tracking' %>


</body>
</html>
