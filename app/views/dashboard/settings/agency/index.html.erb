<% content_for :title do %>
    Agency
<% end %>

<% content_for :sidebar_second do %>
    <p>Use this page to update information about your agency, including payment information.</p>
    <p>You may also purchase additional users from this page. </p>
<% end %>

<%= form_for @agency, :url => dashboard_settings_agency_path, :method => :post do |f| %>


    <div class="form-field">
      <div class="label">
        <%= f.label :name, 'Agency Name' %>
      </div>
      <div class="field">
        <%= f.text_field :name, :size => 20 %>
      </div>
    </div>

    <div class="form-field">
      <div class="label">
        <%= label_tag 'Account Number' %>
      </div>
      <div class="field">
        <%= label_tag @agency.account_number %>
      </div>
    </div>

    <div class="form-field">
      <div class="label">
        <%= label_tag 'Users' %>
      </div>
      <div class="field">
        <%= render 'dashboard/settings/shared/users_summary' %>   &nbsp;&nbsp;    <%=  render 'shared/agency_subscription_link' %>
      </div>
    </div>

    <div class="form-field">
         <div class="label">
           <%= label_tag 'Automatically check out users?' %>
           <div class="description">Employees will be automatically checked out of care appointments if they travel 1 mile away from the appointment after they have checked in.</div>
         </div>
         <div class="field">
           <%= f.radio_button :auto_check_out, true, :id => 'is-company-yes' %> <%= label_tag 'is-company-yes', 'Yes' %>
           <br>
           <%= f.radio_button :auto_check_out, false, :id => 'is-company-no' %> <%= label_tag 'is-company-no', 'No' %>
         </div>
       </div>

    <div class="form-field">
      <div class="label">
        <%= label_tag 'Billing Info' %>
      </div>
      <div class="field">
        <% if @agency.next_billing_date.blank? %>

            You do not have a billing method set up.

        <% else  %>

            Your next monthly bill will be on <%= @agency.next_billing_date.to_formatted_s :mdy %>.

        <% end %>
      </div>
    </div>


    <%= render 'dashboard/settings/shared/credit_cards_on_file', :credit_cards => @credit_cards %>



    <%= f.submit 'Save settings' %>

<% end %>